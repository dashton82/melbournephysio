                    <li data-target="#myCarousel" data-slide-to="7"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img class="first-slide" src="~/Content/Images/melbournephysiobanner.jpg" alt="First slide">
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="second-slide" src="~/Content/Images/Processed/DSC_0486.JPG" alt="Second slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1 class="jumbotron carousel">See our Available Treatments</h1>
                                <p>Look through our available treatments.</p>
                                <p><a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Treatments")" role="button">View Treatments</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="third-slide" src="~/Content/Images/Processed//DSC_0499.JPG" alt="Third slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1 class="jumbotron carousel">Book an appointment</h1>
                                <p>Make an appointment using our quick and easy online system.</p>
                                <p>
                                    <a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Appointments")" role="button">Book Now</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="fourth-slide" src="~/Content/Images/Processed/DSC_0485.JPG" alt="Fourth slide">
                        <div class="container">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="fifth-slide" src="~/Content/Images/Processed/DSC_0494.JPG" alt="Fourth slide">
                        <div class="container">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="sixth-slide" src="~/Content/Images/Processed/DSC_0493.JPG" alt="Fourth slide">
                        <div class="container">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="seventh-slide" src="~/Content/Images/Processed/DSC_0503.JPG" alt="Fifth slide">
                        <div class="container">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="eighth-slide" src="~/Content/Images/Processed/DSC_0508.JPG" alt="Sixth slide">
                        <div class="container">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
